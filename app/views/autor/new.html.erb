<h1> Añadir nuevo autor</h1>

<%= form_tag :action => 'create' do %>
<p><label for = "autor_name">Nombre</label>:
<%= text_field 'autor', 'name', :required => true %></p>

<p><label for = "autor_pais">País</label>:
<%= text_field 'autor', 'pais' %></p>

<%= submit_tag 'Crear' %>
<% end -%>
<%= link_to 'Atrás', {:action => 'list'} %>